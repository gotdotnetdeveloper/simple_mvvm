    <componentModel:BooleanConverter x:Key="BooleanConverter" />
    <convertors:BooleanToVisibilityHideConverter x:Key="BooleanToVisibilityHideConverter" />
    <convertors:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />

    <Style TargetType="{x:Type local:ValidationLabel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ValidationLabel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Content="{TemplateBinding Label}">
                            <Label.Style>
                                <Style TargetType="Label">
                                    <Setter Property="FontFamily" Value="Roboto" />
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="Margin" Value="2,2,2,2" />
                                    <Setter Property="FontWeight" Value="DemiBold" />
                                    <Setter Property="Foreground" Value="#FF9E9E9E" />
                                    <Setter Property="ToolTip" Value="" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:ValidationLabel}, Path=AttachedElement.(Validation.HasError), TargetNullValue=False, FallbackValue=False}" Value="True">
                                            <Setter Property="Foreground" Value="Red" />
                                            <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:ValidationLabel}, Path=AttachedElement.(Validation.Errors)[0].ErrorContent}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                        <Path
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="16"
                            Height="16"
                            Margin="2,2,2,2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="{StaticResource ErrorGeometry}"
                            Fill="Red"
                            Stretch="Uniform"
                            ToolTip="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:ValidationLabel}, Path=AttachedElement.(Validation.Errors)[0].ErrorContent}"
                            
                            Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:ValidationLabel}, Path=AttachedElement.(Validation.HasError), TargetNullValue={x:Static Visibility.Collapsed}, 
                            FallbackValue={x:Static Visibility.Collapsed}, Converter={StaticResource BooleanToVisibilityHideConverter }}" />

                        <!--Visibility="{Binding IsDeveloper, Mode=OneWay, Converter={convertors:BooleanConverter FalseValue=Collapsed, TrueValue=Visible}}"/>-->
                        
                        <Path
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="16"
                            Height="16"
                            Margin="2,2,2,2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="{StaticResource ValidGeometry}"
                            Fill="Green"
                            Stretch="Uniform"
                            Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:ValidationLabel}, Path=AttachedElement.(Validation.HasError), TargetNullValue={x:Static Visibility.Collapsed}, 
                            FallbackValue={x:Static Visibility.Collapsed}, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />

                            <!--Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:ValidationLabel}, Path=AttachedElement.(Validation.HasError), TargetNullValue={x:Static Visibility.Visible}, FallbackValue={x:Static Visibility.Visible}, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />-->
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

